@model IEnumerable<OnlineCatering.Models.Menu>

@{
    ViewData["Title"] = "listMenu";
}

<h1>listMenu</h1>

<p>
    <a asp-action="addMenu">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <img src="@item.Image" alt="Image" width="100" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Category)
            </td>
            <td>
                <a asp-action="editMenu" asp-route-id="@item.MenuItemNo">Edit</a> |
                    <a asp-action="detailMenu" asp-route-id="@item.MenuItemNo">Details</a> |
                <a asp-action="deleteMenu" asp-route-id="@item.MenuItemNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
