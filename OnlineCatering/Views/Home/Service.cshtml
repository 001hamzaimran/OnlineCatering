<!-- Services Start -->
<div class="container-fluid py-6" id="services">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Our Services</h6>
            <h1 class="mb-5">What We Offer</h1>
        </div>
        <div class="row g-4">
            <!-- Wedding Catering -->
            <div class="col-lg-3 col-md-6 wow bounceInUp" data-wow-delay="0.1s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-glass-cheers fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Wedding Catering</h5>
                    <p>Elegant buffet or sit-down service for weddings, complete with decor and full staff.</p>
                </div>
            </div>
            <!-- Corporate Events -->
            <div class="col-lg-3 col-md-6 wow bounceInDown" data-wow-delay="0.3s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-briefcase fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Corporate Events</h5>
                    <p>Professional catering for conferences, meetings, and business events with tailored menus.</p>
                </div>
            </div>
            <!-- Birthday Parties -->
            <div class="col-lg-3 col-md-6 wow bounceInUp" data-wow-delay="0.5s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-birthday-cake fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Birthday Parties</h5>
                    <p>Delicious and fun menu options for kids and adults to make birthdays extra special.</p>
                </div>
            </div>
            <!-- Home Delivery -->
            <div class="col-lg-3 col-md-6 wow bounceInDown" data-wow-delay="0.7s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-truck fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Home Delivery</h5>
                    <p>Get freshly prepared food delivered to your doorstep, perfect for family dinners or small gatherings.</p>
                </div>
            </div>
            <!-- Sit-down Catering -->
            <div class="col-lg-3 col-md-6 wow bounceInUp" data-wow-delay="0.1s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-chair fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Sit-down Catering</h5>
                    <p>Full-service plated meals with professional wait staff for a fine dining experience.</p>
                </div>
            </div>
            <!-- Event Planning -->
            <div class="col-lg-3 col-md-6 wow bounceInDown" data-wow-delay="0.3s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-calendar-alt fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Event Planning</h5>
                    <p>Complete event solutions including decoration, setup, and coordination to make your event stress-free.</p>
                </div>
            </div>
            <!-- Live Cooking Stations -->
            <div class="col-lg-3 col-md-6 wow bounceInUp" data-wow-delay="0.5s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-fire fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Live Cooking</h5>
                    <p>Interactive live cooking counters for BBQ, chaat, and tandoor – adding fun and freshness to your events.</p>
                </div>
            </div>
            <!-- Customized Menu -->
            <div class="col-lg-3 col-md-6 wow bounceInDown" data-wow-delay="0.7s">
                <div class="service-item rounded text-center p-4">
                    <i class="fas fa-utensils fa-3x text-primary mb-4"></i>
                    <h5 class="mb-3">Customized Menus</h5>
                    <p>Design your menu from a wide variety of cuisines – desi, continental, Chinese, and more.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Services End -->
