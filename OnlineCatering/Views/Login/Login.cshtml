@model OnlineCatering.Models.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Welcome Back!</h2>
                    <p class="text-center text-muted mb-4">Please enter your credentials to log in.</p>

                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserPassword" class="form-label">Password</label>
                            <input asp-for="UserPassword" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary rounded-pill py-2">Login</button>
                        </div>
                    </form>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Signup" asp-controller="Login" class="btn btn-outline-secondary btn-sm rounded-pill">Sign Up</a>
                        <a asp-controller="Login" asp-action="CatererLogin" class="btn btn-outline-primary btn-sm rounded-pill">Login as Caterer</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
