@model OnlineCatering.Models.CatererLogin

@{
    ViewData["Title"] = "CatererReg";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-3">Caterer Sign Up</h2>
                    <p class="text-center text-muted mb-4">Register your catering service</p>

                    <form asp-action="CatererReg">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <input asp-for="Restaurant" class="form-control" placeholder="Restaurant Name" />
                            <span asp-validation-for="Restaurant" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email Address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Phone" class="form-control" placeholder="Phone Number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary rounded-pill py-2">Sign Up</button>
                        </div>
                    </form>

                    <div class="d-flex justify-content-between">
                        <a asp-action="CatererLogin" asp-controller="Login" class="btn btn-outline-primary btn-sm rounded-pill">Login as Caterer</a>
                        <a asp-controller="Login" asp-action="Login" class="btn btn-outline-secondary btn-sm rounded-pill">Login as User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
